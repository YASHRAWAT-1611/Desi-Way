<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yashrawwt.desiway">

    <!-- ========================= -->
    <!-- Optional hardware support -->
    <!-- ========================= -->

    <!-- App can run on devices without SIM (Wi-Fi tablets, etc.) -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- ========================= -->
    <!-- Permissions -->
    <!-- ========================= -->

    <!-- Network (images, APIs, maps, etc.) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Emergency calling -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- SOS SMS alerts -->
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- Location (maps, SOS live location) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Emergency contacts picker -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Haptic SOS vibration -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- ========================= -->
    <!-- Application -->
    <!-- ========================= -->

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/logo"
        android:roundIcon="@mipmap/logo"
        android:theme="@style/Theme.DesiWay.Splash"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>
